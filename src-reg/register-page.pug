include ./pug/mixins/mixins

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title Firstep
    meta(name="description", content='Firstep: Register page')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", href="/static/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="/assets/css/reg.css")

  body(class='register-page')
    .register-container
        .register-header
            img(src="/assets/img/logo.svg", alt="Firstep")
        .register-chat
            +message-gray('Привет!')
            +message-gray('Давай выберем способ авторизации в приложении (Нажми на одну из кнопок ниже)')
            button.phone-btn 
                img(src="/assets/img/icon-phone.svg", alt="")
                p Номер телефона
            button.fb-btn 
                img(src="/assets/img/icon-fb.svg", alt="")
                p Facebook
            +message-pink('По номеру телефона')
            +message-gray('Введи свой номер телефона')
            input(type="tel" name="phone")
            button.phone-btn Send Message
            +message-pink('+7 905-205-65-66')
            +message-gray('Сейчас на твой номер придет код, введи его в поле ниже')
            input(type="text" name="code")
            button.code-btn Confirm Code
            div.recaptcha-container

    script(src="https://www.gstatic.com/firebasejs/7.18.0/firebase-app.js")
    script(src="https://www.gstatic.com/firebasejs/7.18.0/firebase-analytics.js")
    script(src="https://www.gstatic.com/firebasejs/7.18.0/firebase-auth.js")

    script(src="/js/reg.js")
    script(src="/js/vendors.js")