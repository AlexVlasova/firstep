mixin switcher(a, b, c)
    div(class="switcher")
        div(class="switcher__item") 
            .switcher-text= a
        div(class="switcher__item switch-checked") 
            .switcher-text= b
        div(class="switcher__item") 
            .switcher-text= c

div(class="filters-modal hide")
    div(class="filters-modal__container")
            button.btn-close-gray
            .display-for-me
                p Показывать мне
                +switcher('Мужчин','Женщин','Всех')
            .age
                .age-heading
                    p Возраст
                    p.numbers 
                        span.left 25 
                        span  - 
                        span.right 75
                div(class="age-slider" id="age")
                    input(type="range" id="input-left" min="18" max="90" value="25")
                    input(type="range" id="input-right" min="18" max="90" value="45")
                    .slider
                        .track
                        .range
                        div(class="thumb left")
                        div(class="thumb right")
            .display-me-to-other
                p Показывать меня в поиске
                +switcher('Мужчинам','Женщинам','Всем')
            .distance
                .distance-heading
                    p Удаленость от меня 
                    p.numbers 
                        span.left 25 
                        span  км
                div(class="distance-slider" id="dist")
                    input(type="range" id="input" min="0" max="100" value="25")
                    .slider
                        .track
                        .range
                        div(class="thumb")