include ./pug/mixins/mixins

doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    title Firstep
    meta(name="description", content='Firstep: Register page')
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon", href="/static/favicon.ico", type="image/x-icon")
    link(rel="stylesheet", href="/assets/css/reg.css")

  body(class='register-page')
    .register-container
        .register-header
            img(src="/assets/img/logo.svg", alt="Firstep")
        .register-chat
            include ./blocks/choose-enter/choose-enter
            include ./blocks/phone-number/phone-number
            +message-pink('confirm ', '+7 905-205-65-66')
            +message-gray('confirm ', 'Сейчас на твой номер придет код, введи его в поле ниже')
            include ./blocks/code-input/code-input
            +message-pink('person-info ', '111111')
            +message-gray('person-info ', 'А теперь познакомимся. Напиши свое имя')
            input(type="text" class="name-input")
            button(class="name send-name ") Далее
            +message-pink('name ', 'Ян')
            +message-gray('sex', 'Приятно познакомиться, Ян. Теперь выбери свой пол')
            button(class="sex-male ") Я мужчина
            button(class="sex-female ") Я женщина
            include ./blocks/date-input/date-input
            include ./blocks/input-img/input-img


    script(src="https://www.gstatic.com/firebasejs/7.18.0/firebase-app.js")
    script(src="https://www.gstatic.com/firebasejs/7.18.0/firebase-analytics.js")
    script(src="https://www.gstatic.com/firebasejs/7.18.0/firebase-auth.js")

    script(defer src="/js/reg.js")
    script(defer src="/js/vendors.js")

    script(defer)
      include ./js/init-facebook.js

    script(defer)
      include ../node_modules/intl-tel-input/build/js/intlTelInput.js

    script(defer)
      include ./blocks/phone-number/phoneInputInit.js

    